doctype html
html.no-js(lang='en')
  head
    meta(charset='UTF-8')
    title
      != (title ? `${title} – ` : '') + 'attentif*'
    meta(name='description', content='Design et développement pour un monde plus beau, à Genève, Suisse, Hong Kong')
    meta(name='author', content='Simon Goumaz')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', href='/media/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', type='text/css', href='/style.css')
    script(src='/scripts/vendor/jquery-1.11.2.min.js')
    script(src='/scripts/vendor/modernizr-2.8.3.min.js')

  body
    #main-container.fade
      header#header
        img.logo(src='/media/logo-at.svg', alt='at*')
      main#main
        if path
          nav#top-nav
            // add 'home' link
            a.home(href='/') |←
            - let splitPath = path.split('/')
            if splitPath.length > 1
              // add 'parent' link
              a(href=`/${splitPath.slice(0, -1).join('/')}`) ←
        if title
          header.page-header
            h1
              != title
            if date
              time(datetime=date)
                = helpers.formatDate(date)
        if !path
          // i.e. home
          section.notice
            h1 What’s last
            ul.articles-list
              for a in lastArticles
                li
                  // chop extension off path as we use permalinks
                  a(href=`/${helpers.trimFileExtension(a.path)}`)
                    h2
                      != a.title
                  time(datetime=a.date)
                    != helpers.formatDate(a.date)
                  p
                    != a.description
            nav.more
              a(href='/a')
                = '→ '
                span.text See all
        section(class=`${inline ? 'inline' : ''}`)
          != contents
      footer#footer
        ul.coordinates
          li.workshop-name
            a(href="/") attentif*
          li.name Simon Goumaz
          //li.address
          //  a(href="http://www.openstreetmap.org/?mlat=22.40114&mlon=113.97977#map=16/22.40115/113.97977&layers=T", target="_blank", title="Open map") G/F, 92 San Hui Village<br>Tuen Mun<br>New Territories, Hong Kong
          li.phone
            a(href="tel:+85298267290") +852&nbsp;9826&nbsp;7290
          li.email
            a(href="mailto:simon@attentif.ch") simon@attentif.ch
          li
            a(href="https://github.com/sgoumaz", target="_blank") GitHub
          li
            a(href="https://www.linkedin.com/pub/simon-goumaz/1/11b/414", target="_blank") LinkedIn

    #video-container
      video#video.fade(autoplay loop)
        source(src='/media/branches.mp4', type='video/mp4')
        source(src='/media/branches.ogv', type='video/ogg')
      img#video-fallback(src='/media/branches.jpg', alt='branches dans la brise')

