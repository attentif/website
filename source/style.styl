@import 'nib'
global-reset()

// VARIABLES

$black = rgba(0, 0, 0, 0.9)
$white = #FFF

$base-font-family = Atlas Typewriter, Inconsolata, Consolas, 'Courier New', Courier, monospace
$base-font-size = 16px
$base-line-height = 23px // = 1.4375
$base-letter-width = round($base-font-size * 0.6875) // empirically determined


// BASE

basefont()
  font-family: $base-font-family
  font-size: $base-font-size
  line-height: $base-line-height

transform-style()
  -webkit-transform-style: arguments
  -moz-transform-style: arguments

selection()
  color: #000
  background-color: rgba(255, 255, 0, 0.5)

*
  padding: 0
  margin: 0
  box-sizing: border-box
  &::-moz-selection
    selection()
  &::selection
    selection()

html
  height: 100%
  &.no-js
    h1 a
      cursor: default
  &.js
    .fade
      opacity: 0 // fade in with code
      transition: opacity 1s ease
      &.visible
        opacity: 1
    #video-fallback
      display: none

body
  height: 100%
  basefont()
  color: $black
  background-color: #AAA

select, input, textarea, button
  basefont()
  color: $black

button
  margin: 0 0.75em 0 0
  border: none
  border-radius: 2px
  padding: 0.25em
  background-color: rgba(0, 0, 0, 0.1)
  line-height: 1
  font-variant: all-small-caps
  cursor: pointer
  &:hover, &:focus, &:active
    color: $white
    background-color: rgba(0, 0, 0, 0.7)

a
  color: $black
  text-decoration: underline

block()
  basefont()
  margin: $base-line-height 0
  &:first-child
    margin-top: 0
  &:last-child
    margin-bottom: 0

h1
  block()
  font-weight: 500
  text-transform: uppercase
  letter-spacing: 0.05em

h2
  basefont()
  display: inline
  font-weight: 500
  font-variant: all-small-caps

p
  basefont()
  display: inline
p + h2
  &::before
    content: '\00a0\00a0'
    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVQImWNgYGD4BwABAwD/oLeC+wAAAABJRU5ErkJggg==')
    background-size: 50% 100%
    background-repeat: repeat-y
    background-position: 0 0
    opacity: 0.9

 strong
  font-weight: 500

em
  font-style: italic


