#main-container
  background: url('/media/transparent-paper.png') fixed rgba(128, 128, 128, 0.5)

#main
  width: 100%
  margin: 0 auto
  padding: ($base-line-height * 2) 0

#pageHeader
  margin-right: 81px
  padding-top: 20px
  text-align: center

section
  margin: $base-line-height 0
  &:first-child
    margin-top: 0
  &:last-child
    margin-bottom: 0

#notice
  padding: $base-line-height $base-letter-width
  border-top: 1em solid $black
  border-bottom: 1em solid $black
  border-left: $base-letter-width solid $black
  border-right: $base-letter-width solid $black
  margin: ("calc(%s - 1em)" % ($base-line-height * 2)) (- $base-letter-width * 2)

.lang::before
  margin-right: $base-letter-width
  color: $white
  background-color: $black
  font-variant: all-small-caps
.lang:not(:first-child)::before
  white-space: pre-wrap
.lang.fr::before
  content: '\A fr'
.lang.en::before
  content: '\A en'
h2.lang
  line-break:

content-text()
  a:hover, a:focus
    text-shadow: 0 0 4px white

  ul
    margin: -0.5em 0 0.75em 0 // expecting a paragraph before by default
    padding-left: 1.35em
    text-indent: -1.35em
    list-style: none
    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

    li
      margin-bottom: 0.25em
      &:before
        content: "\2014\a0\a0"

#sections
  margin: 0 auto
  width: (65 * $base-letter-width)
  text-align: center

  *
    transform-style: preserve-3d

  section
    content-text()

    h1
      display: inline-block
      margin: 0 0 0.2em 0

      a
        padding: 0 15px
        text-decoration: none

  .dash
    padding: 5px 0

  .dashes
    padding-bottom: 5px
    .dash
      display: block
      margin: 0 auto 0 auto

.contact-details
  text-align: center
  .vcard
    margin-top: 0.5em
    font-weight: bold
    a
      text-decoration: none

#video-container
  position: fixed
  top: -50%
  left: -50%
  width: 200%
  height: 200%
  z-index: -10

#video
  display: none // always shown via JS

#video, #video-fallback
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  min-width: 50%
  min-height: 50%

@media (min-width: 750px)
  #main
    width: (52 * $base-letter-width)
  #pageHeader
    margin-right: 37px
    text-align: right
  #sections
    margin: 0 0 0 auto
    width: 200px

#header
  position: fixed
  left: 5em
  bottom: 1em //-9px
  width: 100%
  /*border-bottom: 12px dashed $black*/
  .subtitle
    font-family: Atlas Typewriter
    font-weight: 400
    font-size: 1.5em
  .title
    position: fixed
    bottom: 0
    left: 0.1em
    font-family: Atlas Typewriter
    font-size: 30vw
    line-height: 1
    font-weight: 900
    letter-spacing: -0.07em;
    opacity: 0.25
    filter: blur(2px)
    pointer-events: none
  .title-old
    position: relative
    margin: 0 auto
    width: 700px
    font-family: "Atlas Typewriter"
    font-size: 2em
    font-weight: 900
    letter-spacing: -0.04em;
    //opacity: 0.75
    &:before, &:after
      position: absolute
      width: 200%
      //content: '\00a0— — — — — — — — — — — — — — — — — — — — — — — — — — —\00a0'
      overflow: hidden
    &:before
      margin-left: -200%
      text-align: right
      content: '>\00a0'
    &:after
      margin-right: -200%
      text-align: left
      content: '<'

