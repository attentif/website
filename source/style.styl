basefont()
  font-family: $visual-font
  font-size: 16px //15px
  line-height: 1.5

transform-style()
  -webkit-transform-style: arguments
  -moz-transform-style: arguments

selection()
  color: #000
  background-color: rgba(255, 255, 0, 0.5)

*
  padding: 0
  margin: 0
  box-sizing: border-box
  &::-moz-selection
    selection()
  &::selection
    selection()

html
  height: 100%

  &.no-js
    h1 a
      cursor: default
  &.js
    .fade
      opacity: 0 // fade in with code
      transition: opacity 1s ease
      &.visible
        opacity: 1
    #video-fallback
      display: none

body
  height: 100%
  basefont()
  color: $black
  background-color: #AAA

select, input, textarea, button
  basefont()
  color: $black
  font-family: $visual-font

button
  margin: 0 0.75em 0 0
  border: none
  border-radius: 2px
  padding: 0.25em
  background-color: rgba(0, 0, 0, 0.06)
  font-size: 0.9em
  //font-weight: 300;
  line-height: 1
  font-variant: all-small-caps
  cursor: pointer

  &:hover, &:focus, &:active
    color: $white
    background-color: rgba(0, 0, 0, 0.4)


a
  color: $black
  text-decoration: underline
  &:hover, &:focus
    text-decoration: none

heading()
  font-family: $visual-font
  font-weight: 100 !important
  margin: 1em 0 0.65em 0
  &:first-child
    margin-top: 0

h1
  heading()
  font-size: 1.6em
  font-weight: bold
  text-transform: lowercase

h2
  heading()
  font-size: 1.08em
  font-weight: normal
  text-transform: uppercase

p
  margin: 0.75em 0 1em 0
  &:first-child
    margin-top: 0
  &:last-child
    margin-bottom: 0

strong
  font-weight: bold

em
  font-style: italic

.keyword
  font-variant: small-caps

.attentif
  font-family: $visual-font
  font-weight: bold

#main-container
  background: url('/media/transparent-paper.png') fixed rgba(0, 0, 0, 0.5)

#main
  width: 100%
  margin: 0 auto

#pageHeader
  margin-right: 81px
  padding-top: 20px
  text-align: center

content-text()
  a:hover, a:focus
    text-shadow: 0 0 4px white

  ul
    margin: -0.5em 0 0.75em 0 // expecting a paragraph before by default
    padding-left: 1.35em
    text-indent: -1.35em
    list-style: none
    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

    li
      margin-bottom: 0.25em
      &:before
        content: "\2014\a0\a0"

#sections
  margin: 0 auto
  width: 90%
  text-align: center

  *
    transform-style: preserve-3d

  section
    content-text()

    h1
      display: inline-block
      margin: 0 0 0.2em 0

      a
        padding: 0 15px
        text-decoration: none

  .dash
    padding: 5px 0

  .dashes
    padding-bottom: 5px
    .dash
      display: block
      margin: 0 auto 0 auto

.contact-details
  text-align: center
  .vcard
    margin-top: 0.5em
    font-weight: bold
    a
      text-decoration: none

.tip-content
  margin: 0.8em 0 0 0

#powerTip
  max-width: 400px
  padding: 20px
  white-space: normal
  content-text()
  a
    color: $white
  .contact-details
    .vcard
      text-align: right

#video-container
  position: fixed
  top: -50%
  left: -50%
  width: 200%
  height: 200%
  z-index: -10

#video
  display: none // always shown via JS

#video, #video-fallback
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  min-width: 50%
  min-height: 50%

@media (min-width: 750px)
  #main
    width: 500px
  #pageHeader
    margin-right: 37px
    text-align: right
  #sections
    margin: 0 0 0 auto
    width: 200px
  .tip-content
    margin-left: -100px
    width: 400px
  html.js .tip-content
    display: none

.debug
  margin: 0 -100px
  padding: 100px 0 200px
  text-align: center
  .question
    font-family: $classic-font
    font-size: 2em
    line-height: 1.1
  .title, .text, .question
    margin-bottom: 3em
  .text
    padding: 1rem;
    border-radius: 2px;
    color: white;
    background-color: rgba(0, 0, 0, 0.8);
    text-align: left

#header
  position: fixed
  bottom: 0 //-9px
  width: 100%
  /*border-bottom: 12px dashed $black*/
  .title
    position: relative
    margin: 0 auto
    width: 700px
    font-family: "Atlas Typewriter"
    font-size: 2em
    font-weight: 900
    letter-spacing: -0.04em;
    &:before, &:after
      position: absolute
      width: 200%
      //content: '\00a0— — — — — — — — — — — — — — — — — — — — — — — — — — —\00a0'
      overflow: hidden
    &:before
      margin-left: -200%
      text-align: right
      content: '>\00a0'
