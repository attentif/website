doctype html
html.no-js(lang='fr')
  head
    meta(charset='UTF-8')
    title attentif : atelier
    meta(name='description', content='Atelier de design et développement logiciel à lucrativité limitée, basé à Genève, Suisse')
    meta(name='author', content='Simon Goumaz')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', href='/media/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', type='text/css', href='/scripts/vendor/jquery.powertip.css')
    link(rel='stylesheet', type='text/css', href='/style.css')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js')
    script(src='/scripts/vendor/modernizr.min.js')
    script(src='/scripts/vendor/jquery.powertip.min.js')
    script(src='/scripts/vendor/spin.min.js')

  body
    #main-container.fade
      #main
        header#pageHeader
          img#logo(src='/media/logo-400.png', alt='attentif')

        #sections
          each section in sections
            img.dash(src='/media/dash.png', alt='-')
            section(id='#{section.sectionId}')
              h1
                a.tip(href='#', data-powertiptarget='#{section.sectionId}-content')= section.title
              .tip-content(id='#{section.sectionId}-content')!= section.contents
          .dashes
            img.dash(src='/media/dash.png', alt='-')
            img.dash(src='/media/dash.png', alt='-')
            img.dash(src='/media/dash.png', alt='-')


    #video-container
      video#video.fade(autoplay loop)
        source(src='/media/branches.mp4', type='video/mp4')
        source(src='/media/branches.ogv', type='video/ogg')
      img#video-fallback(src='/media/branches.jpg', alt='branches dans la brise')

    script(src='/scripts/index.js')
