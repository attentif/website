doctype html
html.no-js(lang='en')
  head
    meta(charset='UTF-8')
    title attentif : atelier
    meta(name='description', content='Atelier de design et développement logiciel à lucrativité limitée, basé à Genève, Suisse')
    meta(name='author', content='Simon Goumaz')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', href='/media/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', type='text/css', href='/style.css')
    script(src='/scripts/vendor/jquery-1.11.2.min.js')
    script(src='/scripts/vendor/modernizr-2.8.3.min.js')

  body
    #main-container.fade
      header#header
        img.logo(src='media/logo-at.svg', alt='at*')
      main#main
        each section in sections
          section(id='#{section.id}')
            if section.title
              h1!= section.title
            != section.contents
      footer#footer
        ul.coordinates
          li.workshop-name attentif : atelier*
          li.name Simon Goumaz
          li.address
            | arcade des Pépins de la Pastèque<br>
            a(href="http://www.openstreetmap.org/?mlat=46.19550&mlon=6.14433#map=17/46.19550/6.14433&layers=T", target="_blank", title="Open map") rue des Voisins 20, 1205 Geneva
          li.phone
            a(href="tel:+41793857120") +41 (0)79 385 71 20
          li.email
            a(href="mailto:simon@attentif.ch") simon@attentif.ch
          li
            a(href="https://github.com/sgoumaz", target="_blank") GitHub
          li
            a(href="https://www.linkedin.com/pub/simon-goumaz/1/11b/414", target="_blank") LinkedIn

    #video-container
      video#video.fade(autoplay loop)
        source(src='/media/branches.mp4', type='video/mp4')
        source(src='/media/branches.ogv', type='video/ogg')
      img#video-fallback(src='/media/branches.jpg', alt='branches dans la brise')

